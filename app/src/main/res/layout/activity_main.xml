<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="80dp"
            android:contentDescription="@string/doc"
            android:src="@drawable/doc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:fontFamily="monospace"
            android:padding="20dp"
            android:text="@string/cv_builder"
            android:textColor="@color/purple"
            android:textSize="24sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple"
        android:padding="5dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/pic_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="50dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_picture"
                    android:fontFamily="monospace"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:padding="20dp"/>

            </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/detail_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/pic_card"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/personal_details"
                android:fontFamily="monospace"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:padding="15dp"/>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/summary_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/detail_card"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/summary"
                android:fontFamily="monospace"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:padding="15dp"
               />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/edu_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/summary_card"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/education"
                android:fontFamily="monospace"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:padding="15dp"/>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/exp_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/edu_card"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/experience"
                android:fontFamily="monospace"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:padding="15dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cert_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/exp_card"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/certifications"
                android:fontFamily="monospace"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:padding="15dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/ref_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/cert_card"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/references"
                android:fontFamily="monospace"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:padding="15dp"/>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>


</LinearLayout>